	<style>
		.contenedor {
			position: relative;
			width: 800px;
			height: 700px;
			margin: 20px;
		}

		.blueBg {
			position: absolute;
			top: 130px;
			width: 100%;
			height: 420px;
			display: flex;
			justify-content: center;
			align-items: center;
			border-radius: 10px;
			background: rgba(93, 93, 93, 0.2);
			box-shadow: 0 5px 45px rgba(0, 0, 0, 0.15);
		}

		.blueBg .box {
			position: relative;
			width: 50%;
			height: 100%;
			display: flex;
			justify-content: center;
			align-items: center;
			flex-direction: column;

		}

		.blueBg .box h2 {
			color: #fff;
			font-size: 1.2em;
			font-weight: 500;
		}

		.blueBg .box button {
			cursor: pointer;
			/*border-radius: 5px;*/
			padding: 10px 20px;
			background: #fff;
			color: #333;
			font-size: 16px;
			font-weight: 500;
			border: none;

		}

		.formBx {
			position: absolute;
			top: 0;
			left: 0;
			width: 50%;
			height: 100%;
			border-radius: 10px;
			background: #171717;
			z-index: 1000;
			display: flex;
			justify-content: center;
			align-items: center;
			box-shadow: 0 5px 45px rgba(0, 0, 0, 0.25);
			transition: 0.5s ease-in-out;
			overflow: hidden;
		}

		.formBx.active {
			left: 50%;
		}

		.formBx .form {
			position: absolute;
			left: 0;
			width: 100%;
			padding: 50px;
			transition: 0.5s
		}

		.formBx .signinForm {
			transition-delay: 0.25s;
		}

		.formBx.active .signinForm {
			left: -100%;
			transition-delay: 0s;
		}

		.formBx .signupForm {
			left: 100%;
			transition-delay: 0s;
		}

		.formBx.active .signupForm {
			left: 0;
			transition-delay: 0.25s;
		}

		.formBx .form form {
			width: 100%;
			display: flex;
			flex-direction: column;
		}

		.formBx .form form h3 {
			font-size: 1.5em;
			color: #ffffff;
			margin-bottom: 20px;
			font-weight: 500;
		}

		.formBx .form form input {
			width: 100%;
			margin-bottom: 20px;
			padding: 10px;
			outline: none;
			font-size: 16px;
			color: #fff;
			border: none;
			background: #3b3b3b;
			/*border: 1px solid #5b2880;*/
			border-radius: 5px;

		}

		.formBx .form form input[type="submit"] {
			background: #462c57;
			border: none;
			color: #fff;
			max-width: 100px;
			cursor: pointer;
		}

		.formBx.active .signupForm input[type="submit"] {
			background: #3a294b;

		}

		.formBx.active .signupForm select {
			width: 100%;
			margin-bottom: 20px;
			padding: 10px;
			outline: none;
			font-size: 16px;
			color: #fff;
			border: none;
			background: #3b3b3b;
			border-radius: 5px;
		}

		.formBx.active .signupForm h5 {
			color: #ffffff;
			margin-bottom: 10px;
			font-weight: 500;
		}

		.formBx .form form .forgot {
			color: #ffffff;

		}


		@media (max-width: 991px) {
			.contenedor {
				max-width: 400px;
				height: 850px;
				display: flex;
				justify-content: center;
				align-items: center;
			}

