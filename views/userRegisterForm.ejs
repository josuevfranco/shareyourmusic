					<% let opciones=['Female', 'Male' , 'Non-binary' , 'Transgender' , 'Intersex'
						, 'I prefer not to say' ]; %>
						<% for (const oneOption of opciones) { %>
							<option value="<%= oneOption %>">
								<%= oneOption %>
							</option>
							<% } %>
				</select>
			</div>

